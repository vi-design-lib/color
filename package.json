{
  "name": "@vi-design/color",
  "version": "2.1.0-alpha.7",
  "description": "@vi-design/color是用TS编写的配色方案库，帮助开发者快速创建主题配色方案。",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "type": "module",
  "author": "ZhuChongLin <8210856@qq.com>",
  "keywords": [
    "vi-design-color",
    "@vi-design/color",
    "theme",
    "color"
  ],
  "license": "MIT",
  "unpkg": "./dist/color.umd.js",
  "jsdelivr": "./dist/color.umd.js",
  "exports": {
    ".": {
      "require": {
        "types": "./dist/index.d.ts",
        "node": "./dist/color.umd.js"
      },
      "import": {
        "types": "./dist/index.d.ts",
        "node": "./index.mjs",
        "default": "./dist/index.js"
      }
    },
    "./theme/vitarx": {
      "types": "./dist/theme/vitarx-theme.d.ts",
      "default": "./dist/theme/vitarx-theme.js"
    },
    "./theme/uniapp": {
      "types": "./dist/theme/uniapp-theme.d.ts",
      "default": "./dist/theme/uniapp-theme.js"
    },
    "./theme/vue": {
      "types": "./dist/theme/vue-theme.d.ts",
      "default": "./dist/theme/vue-theme.js"
    },
    "./utils": {
      "types": "./dist/utils/index.d.ts",
      "default": "./dist/utils/index.js"
    },
    "./unpkg": "./dist/color.umd.js",
    "./jsdelivr": "./dist/color.umd.js"
  },
  "scripts": {
    "build": "rimraf dist && pnpm run test && tsc -p tsconfig.app.json && tsx script/replace_version.ts && vite build",
    "push": "release-cli",
    "test": "vitest run"
  },
  "devDependencies": {
    "@commitlint/cli": "^19.8.1",
    "@commitlint/config-conventional": "^19.8.1",
    "@commitlint/types": "^19.8.1",
    "@dcloudio/types": "^3.4.14",
    "@types/node": "^24.3.1",
    "conventional-changelog": "^7.1.1",
    "conventional-changelog-angular": "^8.0.0",
    "husky": "^9.1.7",
    "jsdom": "^26.1.0",
    "prettier": "^3.3.3",
    "typescript": "^5.5.3",
    "vite": "7.1.5",
    "vitest": "^3.2.4"
  },
  "files": [
    "dist",
    "index.mjs",
    "LICENSE",
    "README.md"
  ]
}
