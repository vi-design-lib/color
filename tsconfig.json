{
  "compilerOptions": {
    "useDefineForClassFields": true,
    "declaration": true,           // 生成 .d.ts 文件
    "declarationMap": false,        // 生成 .d.ts 的映射文件（可选）
    "outDir": "./dist",            // 输出目录
    "rootDir": "./src",            // 源文件目录
    "target": "ES2020",            // 目标 JavaScript 版本
    "module": "ESNext",            // 模块系统
    "esModuleInterop": true,       // 启用 ES 模块与 CommonJS 的互操作性
    "skipLibCheck": true,          // 跳过库文件的类型检查
    "strict": true,                 // 启用严格模式
    "moduleResolution": "bundler"
  },
  "include": [
    "src/**/*.ts",
    "node_modules/@dcloudio/types/uni-app/uni/legacy/uni.d.ts",
    "node_modules/@dcloudio/types/uni-app/uni/base/ThemeChange.d.ts"
  ]
}
